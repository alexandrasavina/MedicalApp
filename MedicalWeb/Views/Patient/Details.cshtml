@using MedicalWeb.Models
@model PatientViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Patients</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>

        <dt>@Html.DisplayNameFor(model => model.LastName)</dt>
        <dd>@Html.DisplayFor(model => model.LastName)</dd>

        <dt>@Html.DisplayNameFor(model => model.DateTimeRigist)</dt>
        <dd>@Html.DisplayFor(model => model.DateTimeRigist)</dd>

        <dt>@Html.DisplayNameFor(model => model.City)</dt>
        <dd>@Html.DisplayFor(model => model.City)</dd>

        <dt>@Html.DisplayNameFor(model => model.Address)</dt>
        <dd>@Html.DisplayFor(model => model.Address)</dd>

        <dt>@Html.DisplayNameFor(model => model.PassportNumber)</dt>
        <dd>@Html.DisplayFor(model => model.PassportNumber)</dd>

        <dt>@Html.DisplayNameFor(model => model.DateIssuePassport)</dt>
        <dd>@Html.DisplayFor(model => model.PlaceIssuePassport)</dd>

        <dt>@Html.DisplayNameFor(model => model.City)</dt>
        <dd>@Html.DisplayFor(model => model.City)</dd>

        <dt>@Html.DisplayNameFor(model => model.Gender)</dt>
        <dd>@Html.DisplayFor(model => model.Gender)</dd>

        @if (Model.Contacts != null)
        {
            @for (var i = 0; i < Model.Contacts.Count; i++)
            {
                @if (Model.Contacts[i].Phone != null)
                {
                    <dt>@Html.DisplayNameFor(model => model.Contacts[i].Phone)</dt>
                    <dd>@Html.DisplayFor(m => Model.Contacts[i].Phone)</dd>
                }
                
                @if (Model.Contacts[i].NamePhoneOwner != null)
                {
                    <dt>@Html.DisplayNameFor(m => Model.Contacts[i].NamePhoneOwner)</dt>
                    <dd>@Html.DisplayFor(m => Model.Contacts[i].NamePhoneOwner)</dd>
                }
                
                @if (Model.Contacts[i].Relation != null)
                {
                    <dt>@Html.DisplayNameFor(m => Model.Contacts[i].Relation)</dt>
                    <dd>@Html.DisplayFor(m => Model.Contacts[i].Relation)</dd>
                }
                @if (Model.Contacts[i].Email != null)
                { 
                    <dt>@Html.DisplayNameFor(model => model.Contacts[i].Email)</dt>
                    <dd>@Html.DisplayFor(m => Model.Contacts[i].Email)</dd>
                }
            }   
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Назад", "List")
</p> 