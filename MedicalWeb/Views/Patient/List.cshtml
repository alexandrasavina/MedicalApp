@using MedicalWeb.Models
@model IEnumerable<MedicalWeb.Models.PatientViewModel>
@{
    ViewData["Title"] = "Home Page";
 }

<html>
    <head></head>
    
    <body>
        @Html.ActionLink("Создать", "Create", "Patient")
        @Html.ActionLink("Назад", "Index","Home")
        <table>
            <tr>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.DateTimeRigist)</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.LastName)</td>
                <td> @Html.DisplayFor(modelItem => item.FirstName)</td>
                <td> @Html.DisplayFor(modelItem => item.DateTimeRigist)</td>
                <td> @Html.DisplayFor(modelItem => item.PassportNumber)</td>

                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Просмотр", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
    }
        </table>
    </body>
</html>
