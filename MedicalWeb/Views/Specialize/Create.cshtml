@model MedicalWeb.Models.SpecializeViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>

    @using (Html.BeginForm("Create", "Specialize", FormMethod.Post))
    {
        <div class="editor-label">
            @Html.LabelFor(m => m.Name, "Название")<br />
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <input type="submit" value="Save" class="btn btn-default" />
    }
</body>
</html>